<% if logged_in? %>
    <p>ログイン完了ユーザ: <&%= current_user.name %>/p>
<% else %>
    <h1>タスク一覧</h1>
    
    <% if @tasks.any? %>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>id</th>
                    <th>ステータス</th>
                    <th>タスク</th>
            </thead>
            <tbody>
                <% @tasks.each do |task| %>
                    <tr>
                        <td><%= link_to task.id, task %></td>
                        <td><%= task.status %></td>
                        <td><%= task.content %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div>
            <%= paginate @tasks %>
        </div>
    <% end %>
    <div class="text-center">
            <%= link_to "新規タスクの作成", new_task_path, class: "btn btn-primary" %>
            <%= link_to "ユーザ登録", signup_path, class: "btn btn-primary" %>
    </div>
<% end %>
